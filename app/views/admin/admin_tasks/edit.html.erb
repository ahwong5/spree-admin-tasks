<%= hook :admin_task_edit_form_header do %>
  <h1><%= t("editing_admin_task") %></h1>
  <%= render "shared/error_messages", :target => @admin_task %>
<% end %>

<%= hook :admin_task_edit_form do %>
  <%= form_for(@admin_task, :url => object_url, :html => { :method => :put }) do |f| %>
    <%= render :partial => "form", :locals => { :f => f } %>

    <%= hook :admin_task_edit_form_buttons do %>
      <%= render :partial => "admin/shared/edit_resource_links" %>
    <% end %>
  <% end %>
<% end %>
